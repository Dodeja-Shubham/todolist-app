<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/ut_item_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/rounded_borders"
        android:orientation="horizontal"
        android:padding="7dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ut_item_completed_cb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            tools:srcCompat="@drawable/ic_done_all" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/ut_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="task 1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ut_item_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_gray"
                    tools:text="personal" />

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="200dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/text_gray"
                    android:layout_width="5dp"
                    android:layout_height="5dp"/>

                <TextView
                    android:id="@+id/ut_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:textColor="@color/text_gray"
                    tools:text="date time" />

            </LinearLayout>

            <TextView
                android:id="@+id/ut_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                tools:text="date time qwertyuiopasdfghjklzxcvbnm,. 1234567890-=asdfghjklzxcvbnm,,,,,./" />

        </LinearLayout>



        <ImageView
            android:id="@+id/ut_item_delete"
            android:layout_gravity="center"
            android:src="@drawable/ic_error"
            android:layout_marginEnd="6dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>